#include <serialtank.h>

//! Declaração de variáveis

int8 leitura = 0, setpoint = 25, histerese = 5;

#INT_TIMER0
void  TIMER0_isr(void) 
{

}

//! Definição de funções

void setValvula(int8 acao);
void setHeater(int8 acao);
int8 isCheio();
int16 getTemperatura();
void setDespeja(int8 acao);
int8 isVazio();

void main()
{
   setup_timer_0(RTCC_INTERNAL|RTCC_DIV_8|RTCC_8_BIT);      //1,0 ms overflow

   enable_interrupts(INT_TIMER0);
   enable_interrupts(GLOBAL);

   while(TRUE)
   {
      setValvula(1);
      
      do{
      
         leitura = isCheio();
      
      } while(leitura == 0);
      
      setValvula(0);
      
      setHeater(1);
      
      do{
      
         leitura = getTemperatura();
      
      } while(leitura < setpoint);
      
      setHeater(0);
      
      setDespeja(1);
      
      do{
      
         leitura = isVazio();
      
      } while(leitura == 0);
      
      setDespeja(0);

   }

}

//! Funções

void setValvula(int8 acao){

   putc(0x00);
   putc(acao);

}

void setHeater(int8 acao){

   putc(0x02);
   putc(acao);

}

int8 isCheio(){

   putc(0x10);
   return getc();

}

int16 getTemperatura(){

   putc(0x31);
   return getc();

}

void setDespeja(int8 acao){

   putc(0x01);
   putc(acao);

}

int8 isVazio(){

   putc(0x11);
   return !getc();

}
